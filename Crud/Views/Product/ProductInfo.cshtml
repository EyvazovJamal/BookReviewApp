@model Crud.Models.Product

@{
    ViewData["Title"] = "Product Info";
}

<h2>Product Information</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price$</td>
    </tr>
    <tr>
        <th>Count</th>
        <td>@Model.Count</td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-primary">Back to List</a>
